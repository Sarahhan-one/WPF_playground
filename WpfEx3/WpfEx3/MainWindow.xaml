        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEx3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <TextBlock FontSize="20" x:Name="body" TextWrapping="Wrap" Text="" Height="246" Width="797"/>
        <TextBox FontSize="20" x:Name="input" TextWrapping="Wrap" Text="" Width="795" Height="42" TextChanged="input_TextChanged"/>
        <Button FontSize="20" Content="send" Height="48" Click="Button_Click"/>
        <Button FontSize="20" Content="exit" Height="54" Click="Button_Click_1"/>

    </StackPanel>
</Window>
